                                    <div class="form-group">
                                      <i class="icon-append fa fa-user"></i>
                                      <%= f.label "Nom d'utilisateur" %>
                                      <%= f.text_field :username, autocomplete: "username", placeholder: "Entrez votre nom d'utilisateur", class: "form-control" %>                           
                                    </div>

                                    <div class="form-group">
                                      <%= f.label "Email" %>
                                      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Indiquez votre adresse mail", class: "form-control" %>
                                    </div>

                                    <div class="form-group">
                                      <%= f.label "Code postal" %>
                                      <%= f.text_field :postalcode, autocomplete: "postalcode", placeholder: "Votre code postal ", class: "form-control"  %>
                                    </div>

                                    <div class="form-group">
                                      <%= f.label "Mot de passe" %>
                                      <% if @minimum_password_length %>
                                      <em>(<%= @minimum_password_length %> caractères minimum)</em>
                                      <% end %>
                                      <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe... ", class: "form-control" %>   
                                    </div>  

                                    <div class="form-group">
                                      <%= f.label "Confirmation du mot de passe" %>
                                      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmez votre mot de passe ", class: "form-control" %>
                                    </div> 

                                    <div class="pull-right">
                                       <%= f.submit "Créer mon compte", class: "btn btn-theme-bg btn-sm",style:'color:#FFFFFF'%>
